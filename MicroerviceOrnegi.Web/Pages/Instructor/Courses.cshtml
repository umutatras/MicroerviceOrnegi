@page


@model CoursesModel


@{
    Layout = "_Instructor_Layout";


}

<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">#</th>
            <td>Picture</td>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Price</th>
            <th scope="col">Category Name</th>
            <th scope="col">Rating</th>
            <th scope="col">Duration</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>

@if (Model.CourseViewModels.Any())
    {
        var index = 1;
        foreach (var course in Model.CourseViewModels)
        {
        <tr>
            <th scope="row">x</th>
            <td>
                <course-thumbnail-picture with="100px" class="img-fluid img-thumbnail" src="@course.ImageUrl"></course-thumbnail-picture>
            </td>
            <td>e</td>
            <td>)</td>
            <td>)</td>
            <td>e</td>
            <td>g</td>
            <td>n</td>
            <td>
                <div class="btn-group" role="group">
                    <a asp-page="Update" asp-route-id="@course.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-page-handler="Delete" asp-route-id="@course.Id" class="btn btn-sm btn-danger">Delete</a>
                </div>
            </td>
            </tr>
            index++;
        }
    }
    else
    {
        <tr>
            <td colspan="10" class="text-center">No courses available.</td>
            </tr>
}
</tbody>
</table>